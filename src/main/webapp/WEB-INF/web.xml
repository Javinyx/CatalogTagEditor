<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>TIW-Exam-2021</display-name>
    <servlet>
        <servlet-name>GoToHomepage</servlet-name>
        <servlet-class>it.polimi.tiw.tiw_project_2020_21.controllers.GoToHomepage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoToHomepage</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>


    <context-param>
        <param-name>dbUrl</param-name>
        <param-value>jdbc:mysql://localhost:3306/tiw_2021?serverTimezone=UTC</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>test</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>test</param-value>
    </context-param>
    <context-param>
        <param-name>dbDriver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>

    <filter>
        <filter-name>Checker</filter-name>
        <filter-class>it.polimi.tiw.tiw_project_2020_21.filters.Checker</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>Checker</filter-name>
        <servlet-name>CreateCategory</servlet-name>
        <servlet-name>GoToHomepage</servlet-name>
        <servlet-name>GoToMoveCategory</servlet-name>
    </filter-mapping>
</web-app>